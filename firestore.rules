
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      // Check for 'admin' role in the user document
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isArtisan() {
       // Check for 'artisan' userType. 
       // Note: Data migration required to standardize on userType.
       let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
       return userDoc.userType == 'artisan' || userDoc.role == 'artisan'; 
    }

    // Users can read their own profile. Admins can read/write any profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Allow specific subcollections if necessary, but default valid for now.
    }


    // Messages can be read by sender/receiver. Only sender can create.
    match /messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid || isAdmin());
      allow update, delete: if false; // Messages are immutable
    }

    // AI requests can be created by any auth'd user, but only read by the creator or admin.
    match /aiRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if false;
    }
    
    // Secure Orders Collection
    match /orders/{orderId} {
      // Users can see their own orders. Artisans can see orders assigned to them.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.artisanId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.artisanId == request.auth.uid || isAdmin());
    }
    
    // Secure Customization Requests
    match /CustomizationRequest/{requestId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin() || (isArtisan() && resource.data.status == 'open')); 
       // Artisans might need to query 'open' requests. 
       // This implies query constraints must match.
       allow update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Attendance, alerts, bookings, and analytics can only be accessed by admins for now
    match /attendance/{docId} {
      allow read, write: if isAdmin();
    }
    match /alerts/{docId} {
      allow read, write: if isAdmin();
    }
     match /bookings/{docId} {
      allow read, write: if isAdmin();
    }
     match /analytics/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Restricted Test Collection
    match /tests/{testId} {
      allow read, write: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
